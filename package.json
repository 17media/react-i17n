{
  "name": "react-i17n",
  "version": "0.2.0",
  "description": "A react-intl alternative i18n library for react 16",
  "main": "src/index.js",
  "module": "src/index.js",
  "files": [
    "src",
    "dist",
    "locale-data"
  ],
  "scripts": {
    "start": "cross-env BABEL_ENV=demo NODE_ENV=development webpack-dev-server --config ./demo/webpack.config.js --mode development --hot",
    "build": "cross-env BABEL_ENV=build NODE_ENV=production rollup -c",
    "build-locale": "node scripts/build-locale",
    "prebuild": "rimraf dist && npm run build-locale",
    "postbuild": "npm run bundlesize",
    "test": "jest",
    "bundlesize": "bundlesize",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch",
    "precommit": "lint-staged && flow"
  },
  "lint-staged": {
    "*.js": [
      "prettier --config .prettierrc --write"
    ]
  },
  "dependencies": {
    "intl-format-cache": "^2.1.0",
    "intl-messageformat": "^2.2.0",
    "intl-relativeformat": "^2.1.0"
  },
  "peerDependencies": {
    "react": ">= 16.3"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-jest": "^23.2.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "bundlesize": "^0.17.0",
    "cross-env": "^5.2.0",
    "flow-bin": "0.75.0",
    "formatjs-extract-cldr-data": "4.1.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "jest": "^23.2.0",
    "lint-staged": "^7.2.0",
    "mkdirp": "^0.5.1",
    "prettier": "1.10.2",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-hot-loader": "^4.3.3",
    "react-test-renderer": "^16.4.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.62.0",
    "rollup-plugin-babel": "^3.0.5",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^4.0.0",
    "serialize-javascript": "^1.5.0",
    "webpack": "^4.12.1",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.4"
  },
  "author": "Kai Hao",
  "homepage": "https://github.com/17media/react-i17n",
  "license": "MIT",
  "repository": "git://github.com/17media/react-i17n",
  "keywords": [
    "react 16",
    "react-intl",
    "intl",
    "i18n"
  ],
  "bundlesize": [
    {
      "path": "./dist/react-i17n.min.js",
      "maxSize": "10 kB"
    }
  ]
}
