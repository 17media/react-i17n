{
  "name": "react-i17n",
  "version": "0.2.0",
  "description": "A react-intl alternative i18n library for react 16",
  "main": "src/index.js",
  "module": "src/index.js",
  "files": [
    "src"
  ],
  "scripts": {
    "build-locale": "node scripts/build-locale",
    "postbuild": "npm run bundlesize",
    "test": "jest",
    "bundlesize": "bundlesize",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch",
    "precommit": "lint-staged && flow"
  },
  "lint-staged": {
    "*.js": [
      "prettier --config .prettierrc --write"
    ]
  },
  "dependencies": {
    "intl-format-cache": "^2.1.0",
    "intl-messageformat": "^2.2.0",
    "intl-relativeformat": "^2.1.0"
  },
  "peerDependencies": {
    "react": ">= 16.3"
  },
  "devDependencies": {
    "@babel/core": "~7.0.0-beta.51",
    "@babel/preset-env": "~7.0.0-beta.51",
    "@babel/preset-react": "~7.0.0-beta.51",
    "@babel/preset-stage-2": "~7.0.0-beta.51",
    "babel-core": "^7.0.0-0",
    "babel-jest": "~23.2.0",
    "bundlesize": "~0.16.0",
    "flow-bin": "~0.65.0",
    "formatjs-extract-cldr-data": "4.1.0",
    "husky": "~0.14.3",
    "jest": "~23.2.0",
    "lint-staged": "~6.1.0",
    "mkdirp": "~0.5.1",
    "prettier": "1.10.2",
    "react": "~16.4.1",
    "react-dom": "~16.4.1",
    "react-test-renderer": "~16.4.1",
    "rimraf": "~2.6.2",
    "serialize-javascript": "~1.4.0"
  },
  "author": "Kai Hao",
  "homepage": "https://github.com/17media/react-i17n",
  "license": "MIT",
  "repository": "git://github.com/17media/react-i17n",
  "keywords": [
    "react 16",
    "react-intl",
    "intl",
    "i18n"
  ],
  "bundlesize": [
    {
      "path": "./dist/react-i17n.min.js",
      "maxSize": "15 kB"
    }
  ]
}
